package com.skilldistillery.jpasmoochyzoo.entities;

import java.time.LocalDateTime;
import java.util.Objects;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;

import com.skilldistillery.jpasmoochyzoo.entities.*;

@Entity
public class Animal 
{
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	private int id;
	
	private String name;
	
	private LocalDateTime birthday;
	
	@Column(name="mom_id")
	private Animal momId;
	
	@Column(name="dad_id")
	private Animal dadId;

	public static void main(String[] args) 
	{

	} // end main
	
	private void Animal()
	{
	}

	// getters and setters
	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public LocalDateTime getBirthday() {
		return birthday;
	}

	public void setBirthday(LocalDateTime birthday) {
		this.birthday = birthday;
	}

	public Animal getMomId() {
		return momId;
	}

	public void setMomId(Animal momId) {
		this.momId = momId;
	}

	public Animal getDadId() {
		return dadId;
	}

	public void setDadId(Animal dadId) {
		this.dadId = dadId;
	}

	
	
	// to String
	@Override
	public String toString() {
		return "Animal [id=" + id + ", name=" + name + ", birthday=" + birthday + ", momId=" + momId + ", dadId="
				+ dadId + "]";
	}

	// hashcode equals
	@Override
	public int hashCode() {
		return Objects.hash(id);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Animal other = (Animal) obj;
		return id == other.id;
	}


	
	
	
	
} // end class Animal
